@model WebBanHangOnline.Models.User.RegisterViewModel
@{ 
    ViewBag.Title = "Register";
}
<h2>Register</h2>
@using (Html.BeginForm("Register", "User"))
{
    <div class="form-group">
        @Html.LabelFor(u => u.UserName, "User Name:", new { @class = "control-label" })
        @Html.TextBoxFor(u => u.UserName, new { @class = "form-control" })
        @Html.ValidationMessageFor(u => u.UserName)
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.Password, "Password:", new { @class = "control-label" })
        @Html.PasswordFor(u => u.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(u => u.Password)
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.FirstName, "First Name:", new { @class = "control-label" })
        @Html.TextBoxFor(u => u.FirstName, new { @class = "form-control" })
        @Html.ValidationMessageFor(u => u.FirstName)
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.LastName, "Last Name:", new { @class = "control-label" })
        @Html.TextBoxFor(u => u.LastName, new { @class = "form-control" })
        @Html.ValidationMessageFor(u => u.LastName)
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.Phone, "Phone:", new { @class = "control-label" })
        @Html.TextBoxFor(u => u.Phone, new { @class = "form-control" })
        @Html.ValidationMessageFor(u => u.Phone)
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.Email, "Email:", new { @class = "control-label" })
        @Html.TextBoxFor(u => u.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(u => u.Email)
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
    <button class="btn btn-default">Cancel</button>
}
