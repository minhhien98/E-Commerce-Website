@model IEnumerable<DomainModel.Entity.ProductCategory>

@{
    ViewBag.Title = "PCategoryListNav";
    Layout = null;
}
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Product
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            @foreach (var item in Model)
            {
                <a class="dropdown-item" href="@Url.Action("ProductListByCategory","Product",new {productCategoryId = @item.ProductCategoryId })">@item.ProductCategoryName</a>
            }
        </div>
    </li>
