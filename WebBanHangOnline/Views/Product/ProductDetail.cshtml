@model DomainModel.Entity.Product

@{
    ViewBag.Title = "ProductDetail";
}
<div class="container">

    <!-- Portfolio Item Heading -->
    <h1 class="my-4">
        @Model.ProductName
        <small>@*Secondary Text*@</small>
    </h1>

    <!-- Portfolio Item Row -->
    <div class="row">

        <div class="col-md-8">
            <img class="img-fluid" src="~/Content/Image/Product/@Model.ProductImage" alt="">
        </div>

        <div class="col-md-4">
            <h3 class="my-3">Description</h3>
            <p>@Model.ProductDescription</p>
            <h3 class="my-3">Price</h3>
            <p>@Model.ProductPrice</p>
            <input type="button" value="Add To Cart" class="btn btn-outline-primary" onclick="location.href='@Url.Action("AddToCart","Cart",new {id = Model.ProductId })'" />
        </div>

    </div>
    <!-- /.row -->
    <!-- Related Projects Row -->
    <h3 class="my-4">Related Projects</h3>

    <div class="row">

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="img-fluid" src="http://placehold.it/500x300" alt="">
            </a>
        </div>

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="img-fluid" src="http://placehold.it/500x300" alt="">
            </a>
        </div>

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="img-fluid" src="http://placehold.it/500x300" alt="">
            </a>
        </div>

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="img-fluid" src="http://placehold.it/500x300" alt="">
            </a>
        </div>

    </div>
    <!-- /.row -->

</div>
<!-- /.container -->
